---
import { Icon } from "astro-icon/components";
import { MotionWrapper } from "./MotionWrapper";

const stats = [
  {
    icon: "thanks",
    number: "500+",
    label: "Empresas Atendidas",
    description:
      "Hemos trabajado con más de 500 empresas de diferentes sectores del país, brindando soluciones efectivas en SST.",
  },
  {
    icon: "experience",
    number: "10+",
    label: "Años de Experiencia",
    description: "Una década de experiencia en el sector de SST",
  },
  {
    icon: "target-3d",
    number: "99%",
    label: "Cumplimiento Normativo",
    description:
      "Nuestros clientes logran el cumplimiento total de la normativa",
  },
  {
    icon: "trending-3d",
    number: "85%",
    label: "Reducción de Accidentes",
    description:
      "Promedio de reducción de accidentes laborales en nuestros clientes",
  },
];
---

<section
  id="nosotros"
  class="py-20"
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <MotionWrapper
        client:visible
        initial={{ opacity: 0, y: 20 }}
        whileInView={{ opacity: 1, y: 0 }}
        viewport={{ once: true }}
        className="text-center mb-16"
      >
        <h2
          class="text-3xl md:text-4xl font-bold text-primary mb-4 text-balance"
        >
          ¿Por qué elegir <span
            class="bg-gradient-to-r from-[#0B4791] to-[#69B4BB] text-transparent bg-clip-text"
            >SST360</span
          >?
        </h2>
        <p class="text-xl text-muted-foreground text-pretty">
          Somos líderes en <span
            class="bg-gradient-to-r from-[#0B4791] to-[#3e8086] text-transparent bg-clip-text"
            >Seguridad y Salud en el Trabajo</span
          >, comprometidos con la protección de los trabajadores y el
          cumplimiento normativo de las empresas.
        </p>
      </MotionWrapper>

