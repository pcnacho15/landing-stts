      <MotionWrapper
        client:visible
        initial={{ opacity: 0, scale: 0.9 }}
        whileInView={{ opacity: 1, scale: 1 }}
        viewport={{ once: true }}
        transition={{ duration: 0.4 }}
        className="grid grid-cols-1 md:grid-cols-6 gap-4"
      >
        <div
          class="bg-gradient-to-r from-cyan-700 to-cyan-500 md:row-span-5 md:col-span-2 border rounded-xl h-full shadow-lg p-6 cursor-default hover:-translate-y-1 transition-transform duration-300 ease-out"
        >
          <div
            class="text-3xl font-bold bg-gradient-to-r from-gray-50 to-gray-200 bg-clip-text text-transparent mb-2"
          >
            {stats[0].number}
          </div>
          <div
            class="text-2xl font-semibold bg-gradient-to-r from-gray-50 to-gray-200 bg-clip-text text-transparent mb-2"
          >
            {stats[0].label}
          </div>
          <div class="flex items-center justify-center mx-auto mb-4 p-4">
            <Icon
              name={stats[0].icon}
              size="150"
              class="text-accent"
            />
          </div>
          <p
            class="text-xl font-bold bg-gradient-to-r from-gray-50/90 to-gray-200/90 bg-clip-text text-transparent text-pretty"
          >
            {stats[0].description}
          </p>
        </div>

        <div
          class="bg-gradient-to-r from-cyan-700 to-cyan-500 md:col-span-4 md:row-span-2 md:col-start-3 border rounded-xl h-full shadow-lg p-6 cursor-default hover:-translate-y-1 transition-transform duration-300 ease-out"
        >
          <div class="flex items-center justify-center mx-auto mb-4">
            <div>
              <div
                class="text-3xl font-bold bg-gradient-to-r from-gray-50 to-gray-200 bg-clip-text text-transparent mb-2"
              >
                {stats[3].number}
              </div>
              <div
                class="font-semibold text-2xl bg-gradient-to-r from-gray-50 to-gray-200 bg-clip-text text-transparent mb-2"
              >
                {stats[3].label}
              </div>
              <p
                class="text-lg font-bold bg-gradient-to-r from-gray-50/80 to-gray-200/80 bg-clip-text text-transparent text-pretty"
              >
                {stats[3].description}
              </p>
            </div>
            <Icon
              name={stats[3].icon}
              size="150"
              class="text-accent"
            />
          </div>
        </div>
        <div
          class="bg-gradient-to-r from-cyan-700 to-cyan-500 md:row-span-3 md:col-span-2 md:col-start-3 md:row-start-3 border rounded-xl h-full shadow-lg p-6 cursor-default hover:-translate-y-1 hover:transition-transform duration-300 ease-out"
        >
          <div
            class="text-3xl font-bold bg-gradient-to-r from-gray-50 to-gray-200 bg-clip-text text-transparent mb-2"
          >
            {stats[2].number}
          </div>
          <div
            class="text-2xl font-semibold mb-2 bg-gradient-to-r from-gray-50 to-gray-200 bg-clip-text text-transparent"
          >
            {stats[2].label}
          </div>
          <p
            class="text-lg font-bold bg-gradient-to-r from-gray-50/80 to-gray-200/80 bg-clip-text text-transparent text-pretty"
          >
            {stats[2].description}
          </p>
          <div class="flex items-center justify-center mx-auto mb-4">
            <Icon
              name={stats[2].icon}
              size="150"
              class="text-accent"
            />
          </div>
        </div>
        <div
          class="bg-gradient-to-r from-cyan-700 to-cyan-500 row-span-3 md:col-span-2 md:col-start-5 md:row-start-3 border rounded-xl h-full shadow-lg p-6 cursor-default hover:-translate-y-1 transition-transform duration-300 ease-out"
        >
          <div
            class="text-3xl font-bold bg-gradient-to-r from-gray-50 to-gray-200 bg-clip-text text-transparent mb-2"
          >
            {stats[1].number}
          </div>
          <div
            class="font-semibold text-2xl bg-gradient-to-r from-gray-50 to-gray-200 bg-clip-text text-transparent mb-2"
          >
            {stats[1].label}
          </div>
          <p
            class="text-lg font-bold bg-gradient-to-r from-gray-50/80 to-gray-200/80 bg-clip-text text-transparent text-pretty"
          >
            {stats[1].description}
          </p>
          <div class="flex items-center justify-center mx-auto mb-4 pt-3">
            <Icon
              name={stats[1].icon}
              size="150"
              class="text-accent"
            />
          </div>
        </div>
      </MotionWrapper>
    </div>
  </div>
</section>
