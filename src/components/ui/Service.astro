---
import { Icon } from "astro-icon/components";

const services = [
  {
    icon: "hard-hat",
    title: "Coordinación de Trabajos de Alto Riesgo",
    description:
      "Planificación y supervisión especializada para trabajos en espacios confinados, alturas y ambientes peligrosos.",
    features: [
      "Análisis de riesgos",
      "Permisos de trabajo",
      "Supervisión continua",
    ],
  },
  {
    icon: "mountain",
    title: "Trabajo Seguro en las Alturas",
    description:
      "Implementación de sistemas de protección contra caídas y capacitación especializada.",
    features: [
      "Sistemas anticaídas",
      "Rescate en alturas",
      "Certificación de competencias",
    ],
  },
  {
    icon: "zap",
    title: "Acompañamiento Trabajos Eléctricos",
    description:
      "Supervisión y asesoría para trabajos con riesgo eléctrico bajo normativa RETIE.",
    features: [
      "Análisis de riesgo eléctrico",
      "Procedimientos seguros",
      "Equipos de protección",
    ],
  },
  {
    icon: "file",
    title: "Diseño e Implementación SG-SST",
    description:
      "Desarrollo completo del Sistema de Gestión de Seguridad y Salud en el Trabajo.",
    features: [
      "Diagnóstico inicial",
      "Documentación completa",
      "Implementación gradual",
    ],
  },
  {
    icon: "graduation",
    title: "Capacitaciones SST",
    description:
      "Programas de formación especializados para todos los niveles de la organización.",
    features: [
      "Capacitación virtual y presencial",
      "Certificados oficiales",
      "Seguimiento continuo",
    ],
  },
  {
    icon: "hearth",
    title: "Día de la Salud",
    description:
      "Jornadas de promoción y prevención de la salud ocupacional para los trabajadores.",
    features: [
      "Exámenes médicos",
      "Actividades preventivas",
      "Reportes de salud",
    ],
  },
];
---

<section
  id="servicios"
  class="py-20 bg-muted/30"
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4 text-balance">
        Nuestros Servicios Especializados
      </h2>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto text-pretty">
        Ofrecemos soluciones integrales en Seguridad y Salud en el Trabajo,
        adaptadas a las necesidades específicas de tu empresa.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {
        services.map((service, index) => {
          return (
            <div class="border rounded-xl h-full hover:shadow-lg transition-shadow duration-300 p-6 bg-gray-100 animate-zoom-in">
              <div>
                <div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mb-4">
                  <Icon
                    name={service.icon}
                    size="25"
                    class="text-accent"
                  />
                </div>
                <h3 class="text-xl font-bold text-balance mb-2">
                  {service.title}
                </h3>
                <p class="text-pretty text-base text-gray-600 mb-4">
                  {service.description}
                </p>
              </div>
              <div>
                <ul class="space-y-2">
                  {service.features.map((feature, featureIndex) => (
                    <li class="flex items-center text-sm text-muted-foreground">
                      <div class="w-1.5 h-1.5 bg-[#69B4BB] rounded-full mr-3 flex-shrink-0" />
                      {feature}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          );
        })
      }
    </div>

    <div class="text-center">
      <button
        type="button"
        class="group inline-flex gap-2 items-center justify-center bg-gradient-to-r from-[#0B4791] to-[#69B4BB] hover:from-[#0B4791]/90 hover:to-[#69B4BB]/90 text-accent-foreground text-sm font-medium rounded-md px-4 py-3 cursor-pointer active:scale-95 transition-transform tracking-wide"
      >
        Solicitar Más Información
        <Icon
          name="arrow-right"
          size="20"
          class="transition-transform duration-300 ease-out group-hover:translate-x-1 group-hover:rotate-6"
        />
      </button>
    </div>
  </div>
</section>
